@model Tasks

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form asp-action="TaskCreate" asp-controller="ProjectTasks" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name">Название</label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" style="color: red;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Priorety">Приоритет</label>
                    <select asp-for="Priorety" class="form-control" asp-items="@ViewBag.Priorety"></select>
                    <span asp-validation-for="Priorety" style="color: red;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Техническое задание</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" style="color: red;"></span>
                </div>
                <div>
                    <label asp-for="UserId">Выбрать пользователя</label>
                    <select asp-for="UserId" class="form-control" asp-items="@ViewBag.Users"></select>
                    <span asp-validation-for="UserId" style="color: red;"></span>
                </div>
                <div>
                    <label asp-for="ProjectId">Выбрать проект</label>
                    <select name="projectVal" asp-for="ProjectId" class="form-control" asp-items="@ViewBag.Projects"></select>
                    <span asp-validation-for="ProjectId" style="color: red;"></span>
                </div>
                <br />
                <div class="display: flex; justify-content: center; text-center">
                    <button type="submit" class="btn btn-success">Создать</button>
                    <a asp-controller="ProjectTasks" asp-action="Index" class="btn btn-outline-dark mr-2">Назад к списку</a>
                </div>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>

@section scripts{
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

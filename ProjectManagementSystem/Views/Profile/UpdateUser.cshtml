@model User

<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form asp-controller="Profile" asp-action="UpdateUser" method="post">
                <input asp-for="Id" hidden="hidden" />
                <input asp-for="RoleId" hidden="hidden" />

                <div class="form-group">
                    <label asp-for="Name">ФИО</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmailAddress">E-mail</label>
                    <input asp-for="EmailAddress" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Пароль</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Id" class="form-control" hidden="hidden" />
                </div>
                <div class="form-group m-5 text-center">
                    <input type="submit" value="Сохранить" class="btn btn-success" />
                </div>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
